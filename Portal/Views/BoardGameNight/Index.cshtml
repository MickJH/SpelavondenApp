@model IEnumerable<Core.Domain.Entities.BoardGameNight>

@{
    ViewData["Title"] = "Spelavonden";
    Layout = "_Layout";
}

<h2>Jouw spelavonden:</h2>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary mb-2" asp-action="Create">Maak een spelavond aan!</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date and Time</th>
                <th>Organizer</th>
                <th>Address</th>
                <th>Max Players</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DateAndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(item.OrganizerName)</td>
                    <td>@item.Address</td>
                    <td>@item.MaxPlayers</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
