@model Core.Domain.Entities.BoardGameNight

@{
    ViewData["Title"] = "Verwijderen Bordspelavond";
    Layout = "_Layout";
}

<h2>Verwijderen Spelavond</h2>

<div>
    <p>Weet je zeker dat je deze spelavond wilt verwijderen?</p>
    <dl class="row">
        <dt class="col-sm-2"><i class="fas fa-calendar-days"></i> Datum en Tijd:</dt>
        <dd class="col-sm-10">@Model.DateAndTime?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2"><i class="fa-solid fa-user"></i> Organisator:</dt>
        <dd class="col-sm-10">@Model.OrganizerName</dd>

        <dt class="col-sm-2"><i class="fa-solid fa-location-dot"></i> Adres:</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2"><i class="fas fa-users"></i> Maximaal aantal spelers:</dt>
        <dd class="col-sm-10">@Model.MaxPlayers</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Terug naar de lijst</a>
    </form>
</div>
