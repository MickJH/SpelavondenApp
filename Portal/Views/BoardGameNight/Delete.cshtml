@model Core.Domain.Entities.BoardGameNight

<h2>Delete Board Game Night</h2>

<div>
    <p>Are you sure you want to delete this board game night?</p>
    <dl class="row">
        <dt class="col-sm-2">Date and Time:</dt>
        <dd class="col-sm-10">@Model.DateAndTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Organizer:</dt>
        <dd class="col-sm-10">@Model.OrganizerName</dd>

        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Max Players:</dt>
        <dd class="col-sm-10">@Model.MaxPlayers</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
