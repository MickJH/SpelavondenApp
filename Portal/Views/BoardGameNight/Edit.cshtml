@model Core.Domain.Entities.BoardGameNight

@{
    ViewData["Title"] = "Bewerken";
    Layout = "_Layout";
}

<h2>Edit Board Game Night</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="DateAndTime">Date and Time</label>
        <input asp-for="DateAndTime" class="form-control" required />
        <div class="invalid-feedback">Please enter a valid date and time.</div>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" required />
        <div class="invalid-feedback">Please enter an address.</div>
    </div>

    <div class="form-group">
        <label asp-for="MaxPlayers">Max Players</label>
        <input asp-for="MaxPlayers" class="form-control" required />
        <div class="invalid-feedback">Please enter the maximum number of players.</div>
    </div>

    <!-- Add more form fields as needed -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
