<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - SpelavondenApp</title>
  <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Spelavonden</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Thuis</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/BoardGameNight/Index">Jouw spelavonden</a>
        </li>
      </ul>
    </div>

    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="#">Jouw profiel</a>
      </li>
      @if (User.Identity!.IsAuthenticated)
      {
        <li class="nav-item">
          <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="nav-link btn btn-link">Logout</button>
            @Html.AntiForgeryToken()
          </form>
        </li>
      }
      else
      {
        <li class="nav-item">
          <a class="nav-link" href="/Account/Login">Login</a>
        </li>
      }
    </ul>
  </nav>

  <div class="container">@RenderBody()</div>

  <footer class="fixed-bottom bg-dark text-light text-center py-3">
    &copy; @DateTime.Now.Year Gemaakt door Mick Holster, student Avans
    Hogeschool.
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
