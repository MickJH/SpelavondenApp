@model Core.Domain.Entities.BoardGame

<h2>Create Board Game</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" required />
        <div class="invalid-feedback">Please enter a name.</div>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a description.</div>
    </div>

    <div class="form-group">
        <label asp-for="Genre.Genre">Genre</label>
        <select asp-for="Genre.Genre" class="form-control" required>
            <option value="">Select Genre</option>
            <!-- Add genre options dynamically -->
        </select>
        <div class="invalid-feedback">Please select a genre.</div>
    </div>

    <div class="form-check">
        <input asp-for="Is18Plus" class="form-check-input" type="checkbox" />
        <label class="form-check-label" asp-for="Is18Plus">Is 18+</label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
