@model Core.Domain.Entities.BoardGame

<h2>@Model.Name</h2>

<div class="card">
    <div class="row no-gutters">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="@Model.PhotoUrl" class="card-img" alt="Board Game Image">
            }
            else
            {
                <img src="~/images/GamesHomePagePhoto.jpg" class="card-img" alt="Placeholder Image">
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p class="card-text"><strong>Beschrijving: </strong>@Model.Description</p>
                <p class="card-text"><strong>Genre: </strong>@Model.Genre</p>
                <p class="card-text"><strong>Speltype: </strong>@Model.GameType!.Type</p>
                <p class="card-text"><strong>18+: </strong>@(Model.Is18Plus ? "Ja" : "Nee")</p>
                <div class="text-right">
                    <a href="@Url.Action("Index", "BoardGame")" class="btn btn-primary">Terug naar lijst</a>
                    <a href="@Url.Action("Edit", "BoardGame", new { id = Model.Id })"
                        class="btn btn-warning">Bewerken</a>
                    <a href="@Url.Action("Delete", "BoardGame", new { id = Model.Id })"
                        class="btn btn-danger">Verwijderen</a>
                </div>
            </div>
        </div>
    </div>
</div>
